{
  "version": 1,
  "name": "Flash Install",
  "slug": "flash-install",
  "description": "Blazingly fast package installation for Node.js projects, reducing build times by up to 50%",
  "logo": {
    "light": "https://raw.githubusercontent.com/flash-install-cli/flash-install/main/assets/logo.png",
    "dark": "https://raw.githubusercontent.com/flash-install-cli/flash-install/main/assets/logo.png"
  },
  "publisher": "Flash Install Team",
  "categories": ["developer-tools", "utilities", "build-tools"],
  "resources": {
    "documentation": "https://github.com/flash-install-cli/flash-install/blob/main/docs/vercel-integration.md",
    "website": "https://github.com/flash-install-cli/flash-install",
    "support": "https://github.com/flash-install-cli/flash-install/issues"
  },
  "metadata": {
    "buildTool": true,
    "speedImprovement": "30-50%",
    "compatibleFrameworks": ["Next.js", "Remix", "Astro", "SvelteKit", "Nuxt"]
  },
  "integration": {
    "type": "build-plugin",
    "settings": {
      "enableCache": {
        "type": "boolean",
        "default": true,
        "description": "Enable flash-install's deterministic caching"
      },
      "cacheCompression": {
        "type": "boolean",
        "default": true,
        "description": "Enable compression for cached packages"
      },
      "concurrency": {
        "type": "number",
        "default": 4,
        "description": "Number of concurrent package installations"
      },
      "fallbackToNpm": {
        "type": "boolean",
        "default": true,
        "description": "Fall back to npm if flash-install encounters an error"
      }
    }
  }
}
