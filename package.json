  },
  "devDependencies": {
    "@types/archiver": "^6.0.3",
    "@types/decompress": "^4.2.7",
    "@types/fs-extra": "^11.0.4",
    "@types/ini": "^4.1.1",
    "@types/node": "^22.14.1",
