{
  "name": "flash-install",
  "version": "1.0.0",
  "description": "A fast, drop-in replacement for npm install with deterministic caching",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "flash-install": "dist/cli.js"
  },
  "scripts": {
